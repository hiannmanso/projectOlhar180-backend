
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Task {
  id        Int       @id @default(autoincrement())
  title     String
  describe  String
  status    Status?   @default(pendente)
  finalDate String
  priority  Priority  // Restrito aos valores 'alta', 'media' ou 'baixa'
  accountId Int       @map("account_id")
  account   accounts  @relation(fields: [accountId], references: [id])

  @@map(name: "tasks")
}

model accounts {
  id       Int    @id @default(autoincrement()) @map("accounts_pk")
  username String
  email    String @unique
  password String
  tasks    Task[]

  @@map(name: "accounts")
}

enum Priority {
  alta
  media
  baixa
}
enum Status { 
  feito
  pendente
}